procedure TForm1.BitBtn1Click(Sender: TObject);
VAR
        MENSAGEM:STRING;
        CONTAR:INTEGER;
begin
        MENSAGEM:=PANEL1.CAPTION;
        CONTAR:=LENGTH(PANEL1.CAPTION);
        DELETE(MENSAGEM,CONTAR,1);
        PANEL1.CAPTION:=MENSAGEM;

end;

